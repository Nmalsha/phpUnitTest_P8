{% extends 'base.html.twig' %} {% block header_title %} {% for message in
app.flashes('success') %}
<div class="alert alert-success">
  {{ message }}
</div>
{% endfor %} {% for message in app.flashes('error') %}
<div class="alert alert-warning">
  {{ message }}
</div>
{% endfor %}
<h1>
  Modifier <strong>{{ user.username }}</strong>
</h1>
{% endblock %} {% block header_img %}{% endblock %} {% block body %}
<div class="row">
  {{ form_start(form, { action: path("user_edit", { id: user.id }) }) }}
  {{ form_widget(form) }}

  <button type="submit" class="btn btn-success pull-right" name="modifier">
    Modifier
  </button>
  {{ form_end(form) }}
</div>
{% endblock %}
